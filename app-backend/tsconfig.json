{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "noUnusedLocals": true,
    "removeComments": true,
    "moduleResolution": "node",
    "experimentalDecorators": true
  },
  "include": [
    "src/main/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}