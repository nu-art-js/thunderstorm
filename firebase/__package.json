{
  "name": "@nu-art/firebase",
  "version": "$THUNDERSTORM_SDK_VERSION",
  "description": "Storm - Express & Typescript based backend framework",
  "keywords": [
    "TacB0sS",
    "infra",
    "nu-art",
    "storm",
    "thunderstorm",
    "typescript"
  ],
  "homepage": "https://github.com/nu-art-js/firebase",
  "bugs": {
    "url": "https://github.com/nu-art-js/firebase/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:nu-art-js/firebase.git"
  },
  "publishConfig": {
    "directory": "dist",
    "linkDirectory": true
  },
  "license": "Apache-2.0",
  "author": "TacB0sS",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "**/*"
  ],
  "scripts": {
    "build": "tsc",
    "run-tests": "bash build-and-install.sh -wt & firebase emulators:exec \"npm run test\"",
    "test": "mocha -w dist-test/test/firestore-v2/__test.js",
    "rtv2": "firebase emulators:exec \"npm run test-v2\" --inspect-functions 8107",
    "test-v2": "mocha dist-test/test/firestore-v2/__test.js"
  },
  "dependencies": {
    "@nu-art/ts-common": "$THUNDERSTORM_SDK_VERSION",
    "@nu-art/google-services": "$THUNDERSTORM_SDK_VERSION",
    "@google-cloud/common": "^3.0.0",
    "@google-cloud/storage": "^5.0.0",
    "@google-cloud/firestore": "^4.8.1",
    "express": "$EXPRESS_PKG_VERSION",
    "firebase": "$FIREBASE_PKG_VERSION",
    "firebase-admin": "$FIREBASE_ADMIN_PKG_VERSION",
    "firebase-functions": "$FIREBASE_FUNCTIONS_PKG_VERSION",
    "google-auth-library": "^6.0.6",
    "fs": "0.0.1-security"
  },
  "devDependencies": {
    "@types/compression": "^1.0.1",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "teeny-request": "~7.2.0",
    "@firebase/auth": "$FIREBASE_AUTH_PKG_VERSION",
    "@firebase/app": "0.9.5"
  }
}
