{
  "database": {
    "rules": ".firebase_config/database.rules.json"
  },
  "firestore": {
    "rules": ".firebase_config/firestore.rules",
    "indexes": ".firebase_config/firestore.indexes.json"
  },
  "storage": {
    "rules": ".firebase_config/storage.rules"
  },
  "remoteconfig": {
    "template": ".firebase_config/remoteconfig.template.json"
  },
  "functions": {
    "ignore": [
      "src",
      ".config",
      "dist-test",
      "deploy.js",
      "node_modules"
    ],
    "predeploy": [
      "echo \"Trying to deploy LOCAL env... Failing\" && exit 2"
    ]
  },
  "emulators": {
    "functions": {
      "port": "5010"
    },
    "database": {
      "port": "5012"
    },
    "firestore": {
      "port": "5013"
    },
    "pubsub": {
      "port": "5014"
    },
    "storage": {
      "port": "5015"
    }
  }
}
